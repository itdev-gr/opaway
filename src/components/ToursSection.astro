<section class="bg-[#F5F6F8] py-16 lg:py-24 px-6 lg:px-10">
	<div class="max-w-6xl mx-auto">
		<div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-16 items-center">

			<!-- Left: Content -->
			<div class="flex flex-col">

				<!-- Label -->
				<div class="flex items-center gap-2 mb-5">
					<span class="w-2 h-2 rounded-full bg-[#0C6B95] shrink-0"></span>
					<span class="text-sm font-medium text-neutral-500 tracking-wide">Your Personal Chauffeur, At Your Fingertips</span>
				</div>

				<!-- Heading -->
				<h2 class="text-4xl lg:text-5xl font-bold text-neutral-900 leading-tight mb-6">
					Tours
				</h2>

				<!-- Description -->
				<p class="text-neutral-500 text-base leading-relaxed mb-4">
					From bustling city centers to remote airports, our professional chauffeurs are available around the clock to ensure your journey is seamless and stress-free.
				</p>
				<p class="text-neutral-500 text-base leading-relaxed mb-8">
					With our extensive network spanning over 100 countries, we connect you to thousands of cities and airports worldwide, offering unmatched convenience wherever you travel.
				</p>

				<!-- CTA Button -->
				<div>
					<a
						href="/book"
						class="inline-flex items-center gap-2 bg-[#0C6B95] hover:bg-[#0a5c82] text-white font-semibold px-8 py-4 rounded-xl transition-colors duration-200 shadow-lg shadow-[#0C6B95]/25"
					>
						Book a Tour
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
						</svg>
					</a>
				</div>

			</div>

			<!-- Right: Illustration -->
			<div class="rounded-2xl overflow-hidden shadow-sm bg-white aspect-4/3 lg:aspect-auto lg:h-[480px]">
				<img
					src="/image_tours.avif"
					alt="Tours illustration"
					class="w-full h-full object-cover"
				/>
			</div>

		</div>
	</div>
</section>
