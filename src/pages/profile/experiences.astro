---
import ProfileLayout from '../../components/ProfileLayout.astro';
---

<ProfileLayout>
	<div class="relative z-10 w-full max-w-md">
		<div class="flex justify-center mb-8">
			<a href="/" aria-label="Go to homepage">
				<img src="/logo-opawey.png" alt="Opawey" class="h-16 w-auto object-contain" />
			</a>
		</div>
		<div class="bg-white rounded-3xl border border-neutral-200 shadow-xl shadow-neutral-200/60 p-8 lg:p-10">
			<div class="mb-8">
				<div class="flex items-center gap-2 mb-3">
					<span class="w-2 h-2 rounded-full bg-[#0C6B95] shrink-0"></span>
					<span class="text-xs font-medium text-[#0C6B95] tracking-widest uppercase">Experiences</span>
				</div>
				<h1 class="text-3xl font-bold text-neutral-900">My experiences</h1>
				<p class="text-neutral-500 text-sm mt-1">View and manage your experience bookings.</p>
			</div>
			<p class="text-neutral-500 text-sm">No experiences yet. <a href="/experiences" class="text-[#0C6B95] font-medium hover:underline">Browse experiences</a>.</p>
		</div>
	</div>
</ProfileLayout>

<script>
	import { auth } from '../../lib/firebase';
	import { onAuthStateChanged } from 'firebase/auth';

	onAuthStateChanged(auth, (user) => {
		if (!user) window.location.href = '/login';
	});
</script>
