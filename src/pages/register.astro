---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<main class="min-h-screen bg-sky-50 flex items-center justify-center px-6 py-24">

		<!-- Soft gradient blobs -->
		<div class="fixed top-0 right-0 w-[600px] h-[600px] bg-[#0C6B95]/6 rounded-full blur-3xl -translate-y-1/3 translate-x-1/4 pointer-events-none"></div>
		<div class="fixed bottom-0 left-0 w-[400px] h-[400px] bg-sky-100/60 rounded-full blur-3xl translate-y-1/3 -translate-x-1/4 pointer-events-none"></div>

		<div class="relative z-10 w-full max-w-md">

			<!-- Logo -->
			<div class="flex justify-center mb-8">
				<a href="/" aria-label="Go to homepage">
					<img src="/logo-opawey.png" alt="Opawey" class="h-16 w-auto object-contain" />
				</a>
			</div>

			<!-- Card -->
			<div class="bg-white rounded-3xl border border-neutral-200 shadow-xl shadow-neutral-200/60 p-8 lg:p-10">

				<!-- Header -->
				<div class="mb-8">
					<div class="flex items-center gap-2 mb-3">
						<span class="w-2 h-2 rounded-full bg-[#0C6B95] shrink-0"></span>
						<span class="text-xs font-medium text-[#0C6B95] tracking-widest uppercase">Get Started</span>
					</div>
					<h1 class="text-3xl font-bold text-neutral-900">Create account</h1>
					<p class="text-neutral-500 text-sm mt-1">Join Opawey and book your next journey with ease.</p>
				</div>

				<!-- Auth error message -->
				<div id="auth-error" class="hidden mb-4 p-3 rounded-xl bg-red-50 border border-red-200 text-red-700 text-sm" role="alert"></div>

				<!-- Form -->
				<form id="register-form" class="flex flex-col gap-5" novalidate>

					<!-- Full Name -->
					<div class="flex flex-col gap-1.5">
						<label class="text-neutral-700 text-xs font-medium uppercase tracking-widest">Full Name</label>
						<div class="relative">
							<span class="absolute left-3.5 top-1/2 -translate-y-1/2 text-neutral-400 pointer-events-none">
								<svg class="w-4.5 h-4.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
									<path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
								</svg>
							</span>
							<input
								type="text"
								name="name"
								placeholder="e.g. John Smith"
								autocomplete="name"
								class="w-full pl-10 pr-4 py-3 bg-neutral-50 border border-neutral-200 rounded-xl text-neutral-800 placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-[#0C6B95]/20 focus:border-[#0C6B95] transition-colors text-sm"
							/>
						</div>
					</div>

					<!-- Email -->
					<div class="flex flex-col gap-1.5">
						<label class="text-neutral-700 text-xs font-medium uppercase tracking-widest">Email Address</label>
						<div class="relative">
							<span class="absolute left-3.5 top-1/2 -translate-y-1/2 text-neutral-400 pointer-events-none">
								<svg class="w-4.5 h-4.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
									<path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
								</svg>
							</span>
							<input
								type="email"
								name="email"
								placeholder="e.g. john@example.com"
								autocomplete="email"
								class="w-full pl-10 pr-4 py-3 bg-neutral-50 border border-neutral-200 rounded-xl text-neutral-800 placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-[#0C6B95]/20 focus:border-[#0C6B95] transition-colors text-sm"
							/>
						</div>
					</div>

					<!-- Password -->
					<div class="flex flex-col gap-1.5">
						<label class="text-neutral-700 text-xs font-medium uppercase tracking-widest">Password</label>
						<div class="relative">
							<span class="absolute left-3.5 top-1/2 -translate-y-1/2 text-neutral-400 pointer-events-none">
								<svg class="w-4.5 h-4.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
									<path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
								</svg>
							</span>
							<input
								id="password-input"
								type="password"
								name="password"
								placeholder="Min. 8 characters"
								autocomplete="new-password"
								class="w-full pl-10 pr-11 py-3 bg-neutral-50 border border-neutral-200 rounded-xl text-neutral-800 placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-[#0C6B95]/20 focus:border-[#0C6B95] transition-colors text-sm"
							/>
							<button
								type="button"
								id="toggle-password"
								class="absolute right-3.5 top-1/2 -translate-y-1/2 text-neutral-400 hover:text-neutral-600 transition-colors"
								aria-label="Toggle password visibility"
							>
								<svg id="eye-icon" class="w-4.5 h-4.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
									<path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
									<path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
								</svg>
								<svg id="eye-off-icon" class="w-4.5 h-4.5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
									<path stroke-linecap="round" stroke-linejoin="round" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
								</svg>
							</button>
						</div>
						<!-- Password strength bar -->
						<div id="strength-bar-wrap" class="flex gap-1 mt-1 hidden">
							<div class="h-1 flex-1 rounded-full bg-neutral-200 overflow-hidden"><div id="s1" class="h-full w-0 rounded-full transition-all duration-300"></div></div>
							<div class="h-1 flex-1 rounded-full bg-neutral-200 overflow-hidden"><div id="s2" class="h-full w-0 rounded-full transition-all duration-300"></div></div>
							<div class="h-1 flex-1 rounded-full bg-neutral-200 overflow-hidden"><div id="s3" class="h-full w-0 rounded-full transition-all duration-300"></div></div>
							<div class="h-1 flex-1 rounded-full bg-neutral-200 overflow-hidden"><div id="s4" class="h-full w-0 rounded-full transition-all duration-300"></div></div>
						</div>
						<p id="strength-label" class="text-xs text-neutral-400 hidden"></p>
					</div>

					<!-- Confirm Password -->
					<div class="flex flex-col gap-1.5">
						<label class="text-neutral-700 text-xs font-medium uppercase tracking-widest">Confirm Password</label>
						<div class="relative">
							<span class="absolute left-3.5 top-1/2 -translate-y-1/2 text-neutral-400 pointer-events-none">
								<svg class="w-4.5 h-4.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
									<path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
								</svg>
							</span>
							<input
								id="confirm-input"
								type="password"
								name="confirm_password"
								placeholder="Repeat your password"
								autocomplete="new-password"
								class="w-full pl-10 pr-4 py-3 bg-neutral-50 border border-neutral-200 rounded-xl text-neutral-800 placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-[#0C6B95]/20 focus:border-[#0C6B95] transition-colors text-sm"
							/>
						</div>
						<p id="match-msg" class="text-xs hidden"></p>
					</div>

					<!-- Terms -->
					<label class="flex items-start gap-3 cursor-pointer select-none">
						<div class="relative shrink-0 mt-0.5">
							<input type="checkbox" name="terms" id="terms-checkbox" class="peer sr-only" required />
							<div class="w-5 h-5 rounded-md border-2 border-neutral-300 bg-white peer-checked:bg-[#0C6B95] peer-checked:border-[#0C6B95] transition-colors flex items-center justify-center">
								<svg class="w-3 h-3 text-white opacity-0 peer-checked:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3">
									<path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
								</svg>
							</div>
						</div>
						<span class="text-sm text-neutral-600 leading-relaxed">
							I agree to the
							<a href="/terms" class="text-[#0C6B95] font-medium hover:underline">Terms of Service</a>
							and
							<a href="/privacy" class="text-[#0C6B95] font-medium hover:underline">Privacy Policy</a>
						</span>
					</label>

					<!-- Submit -->
					<button
						type="submit"
						id="submit-btn"
						class="w-full py-3.5 bg-[#0C6B95] hover:bg-[#0a5c82] text-white font-semibold rounded-xl transition-colors duration-200 flex items-center justify-center gap-2 shadow-lg shadow-[#0C6B95]/25 mt-1 disabled:opacity-60 disabled:cursor-not-allowed"
					>
						Create Account
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
						</svg>
					</button>

				</form>

				<!-- Divider -->
				<div class="flex items-center gap-4 my-6">
					<div class="flex-1 h-px bg-neutral-200"></div>
					<span class="text-xs text-neutral-400 font-medium">OR</span>
					<div class="flex-1 h-px bg-neutral-200"></div>
				</div>

				<!-- Google SSO -->
				<button
					type="button"
					id="google-btn"
					class="w-full py-3 border border-neutral-200 rounded-xl bg-white hover:bg-neutral-50 transition-colors flex items-center justify-center gap-3 text-sm font-medium text-neutral-700 disabled:opacity-60 disabled:cursor-not-allowed"
				>
					<svg class="w-5 h-5" viewBox="0 0 24 24" aria-hidden="true">
						<path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
						<path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
						<path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
						<path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
					</svg>
					Continue with Google
				</button>

				<!-- Login link -->
				<p class="text-center text-sm text-neutral-500 mt-6">
					Already have an account?
					<a href="/login" class="text-[#0C6B95] font-semibold hover:text-[#0a5c82] transition-colors">Sign in</a>
				</p>

			</div>
		</div>
	</main>
</Layout>

<script>
	import { auth } from '../lib/firebase';
	import { ensureUserInFirestore } from '../lib/userFirestore';
	import { createUserWithEmailAndPassword, signInWithPopup, GoogleAuthProvider } from 'firebase/auth';

	// Toggle password visibility
	const toggleBtn = document.getElementById('toggle-password');
	const passwordInput = document.getElementById('password-input') as HTMLInputElement;
	const confirmInput = document.getElementById('confirm-input') as HTMLInputElement;
	const eyeIcon = document.getElementById('eye-icon');
	const eyeOffIcon = document.getElementById('eye-off-icon');

	toggleBtn?.addEventListener('click', () => {
		const isHidden = passwordInput.type === 'password';
		passwordInput.type = isHidden ? 'text' : 'password';
		eyeIcon?.classList.toggle('hidden', isHidden);
		eyeOffIcon?.classList.toggle('hidden', !isHidden);
	});

	// Password strength
	const strengthBar = document.getElementById('strength-bar-wrap');
	const strengthLabel = document.getElementById('strength-label');
	const segments = ['s1', 's2', 's3', 's4'].map(id => document.getElementById(id));
	const colors = ['bg-red-400', 'bg-orange-400', 'bg-yellow-400', 'bg-green-500'];
	const labels = ['Weak', 'Fair', 'Good', 'Strong'];

	function getStrength(pwd: string): number {
		let score = 0;
		if (pwd.length >= 8) score++;
		if (/[A-Z]/.test(pwd)) score++;
		if (/[0-9]/.test(pwd)) score++;
		if (/[^A-Za-z0-9]/.test(pwd)) score++;
		return score;
	}

	passwordInput?.addEventListener('input', () => {
		const val = passwordInput.value;
		if (!val) {
			strengthBar?.classList.add('hidden');
			strengthLabel?.classList.add('hidden');
			return;
		}
		strengthBar?.classList.remove('hidden');
		strengthLabel?.classList.remove('hidden');
		const score = getStrength(val);
		segments.forEach((seg, i) => {
			if (!seg) return;
			// Reset colors
			seg.className = `h-full rounded-full transition-all duration-300`;
			if (i < score) {
				seg.style.width = '100%';
				seg.classList.add(colors[score - 1]);
			} else {
				seg.style.width = '0';
			}
		});
		if (strengthLabel) {
			strengthLabel.textContent = labels[score - 1] ?? '';
			strengthLabel.className = `text-xs ${['text-red-400','text-orange-400','text-yellow-500','text-green-500'][score - 1] ?? 'text-neutral-400'}`;
		}
		checkMatch();
	});

	// Confirm password match
	const matchMsg = document.getElementById('match-msg');
	function checkMatch() {
		if (!confirmInput.value) { matchMsg?.classList.add('hidden'); return; }
		const match = passwordInput.value === confirmInput.value;
		if (matchMsg) {
			matchMsg.classList.remove('hidden');
			matchMsg.textContent = match ? 'Passwords match' : 'Passwords do not match';
			matchMsg.className = `text-xs ${match ? 'text-green-500' : 'text-red-400'}`;
		}
	}
	confirmInput?.addEventListener('input', checkMatch);

	// Firebase Auth: email/password sign-up
	const registerForm = document.getElementById('register-form') as HTMLFormElement;
	const authError = document.getElementById('auth-error') as HTMLElement;
	const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;

	function showError(message: string) {
		if (authError) {
			authError.textContent = message;
			authError.classList.remove('hidden');
		}
	}

	function hideError() {
		authError?.classList.add('hidden');
	}

	registerForm?.addEventListener('submit', async (e) => {
		e.preventDefault();
		hideError();
		const email = (registerForm.querySelector('[name="email"]') as HTMLInputElement)?.value?.trim();
		const password = (registerForm.querySelector('[name="password"]') as HTMLInputElement)?.value;
		const confirm = (registerForm.querySelector('[name="confirm_password"]') as HTMLInputElement)?.value;
		if (!email || !password) {
			showError('Please enter email and password.');
			return;
		}
		if (password !== confirm) {
			showError('Passwords do not match.');
			return;
		}
		if (password.length < 8) {
			showError('Password must be at least 8 characters.');
			return;
		}
		submitBtn.disabled = true;
		try {
			const { user } = await createUserWithEmailAndPassword(auth, email, password);
			const name = (registerForm.querySelector('[name="name"]') as HTMLInputElement)?.value?.trim();
			await ensureUserInFirestore(user, name || undefined);
			window.location.href = '/';
		} catch (err: unknown) {
			const msg = err && typeof err === 'object' && 'message' in err ? String((err as { message: string }).message) : 'Registration failed. Try again.';
			showError(msg.includes('auth/') ? msg.replace('Firebase: ', '').replace('auth/', '') : msg);
		} finally {
			submitBtn.disabled = false;
		}
	});

	// Firebase Auth: Google sign-in
	const googleBtn = document.getElementById('google-btn') as HTMLButtonElement;
	googleBtn?.addEventListener('click', async () => {
		hideError();
		googleBtn.disabled = true;
		try {
			const { user } = await signInWithPopup(auth, new GoogleAuthProvider());
			await ensureUserInFirestore(user);
			window.location.href = '/';
		} catch (err: unknown) {
			const msg = err && typeof err === 'object' && 'message' in err ? String((err as { message: string }).message) : 'Google sign-in failed.';
			showError(msg.includes('auth/') ? msg.replace('Firebase: ', '').replace('auth/', '') : msg);
		} finally {
			googleBtn.disabled = false;
		}
	});
</script>
