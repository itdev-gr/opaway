---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<main>
		<section class="relative min-h-screen bg-sky-50 flex items-center py-32 px-6 lg:px-10 overflow-hidden">

			<!-- Soft gradient blobs for depth -->
			<div class="absolute top-0 right-0 w-[600px] h-[600px] bg-[#0C6B95]/8 rounded-full blur-3xl -translate-y-1/3 translate-x-1/4 pointer-events-none"></div>
			<div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-sky-100/60 rounded-full blur-3xl translate-y-1/3 -translate-x-1/4 pointer-events-none"></div>

			<!-- Content -->
			<div class="relative z-10 max-w-6xl mx-auto w-full">

				<!-- Two-column grid -->
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-14 lg:gap-20 items-start">

					<!-- ── Left: Label + Heading + Contact Info ── -->
					<div class="flex flex-col items-center lg:items-start text-center lg:text-left">

						<!-- Label -->
						<div class="flex items-center justify-center lg:justify-start gap-2 mb-4">
							<span class="w-2 h-2 rounded-full bg-[#0C6B95] shrink-0"></span>
							<span class="text-sm font-medium text-[#0C6B95] tracking-widest uppercase">Get in Touch</span>
						</div>

						<!-- Heading -->
						<h1 class="text-5xl lg:text-7xl font-bold text-neutral-900 mb-12 leading-tight">Contact Us</h1>

						<!-- Info blocks -->
						<div class="flex flex-col gap-8 w-full">

							<!-- Call Us -->
							<div class="flex items-start gap-5">
								<div class="w-12 h-12 rounded-xl bg-[#0C6B95] flex items-center justify-center shrink-0 shadow-md shadow-[#0C6B95]/20">
									<svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
										<path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
									</svg>
								</div>
								<div>
									<p class="text-neutral-400 text-xs font-medium uppercase tracking-widest mb-1">Call Us</p>
									<p class="text-neutral-900 font-semibold text-lg">+30 210 933 3164</p>
								</div>
							</div>

							<!-- Location -->
							<div class="flex items-start gap-5">
								<div class="w-12 h-12 rounded-xl bg-[#0C6B95] flex items-center justify-center shrink-0 shadow-md shadow-[#0C6B95]/20">
									<svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
										<path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
										<path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
									</svg>
								</div>
								<div>
									<p class="text-neutral-400 text-xs font-medium uppercase tracking-widest mb-1">Find Us</p>
									<p class="text-neutral-900 font-semibold text-lg">Magkriotou 6</p>
									<p class="text-neutral-500 text-sm mt-0.5">Athens, Greece</p>
								</div>
							</div>

							<!-- Email -->
							<div class="flex items-start gap-5">
								<div class="w-12 h-12 rounded-xl bg-[#0C6B95] flex items-center justify-center shrink-0 shadow-md shadow-[#0C6B95]/20">
									<svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
										<path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
									</svg>
								</div>
								<div>
									<p class="text-neutral-400 text-xs font-medium uppercase tracking-widest mb-1">Email Us</p>
									<a href="mailto:info@opawey.com" class="text-neutral-900 font-semibold text-lg hover:text-[#0C6B95] transition-colors">info@opawey.com</a>
								</div>
							</div>

							<!-- Business Hours -->
							<div class="flex items-start gap-5">
								<div class="w-12 h-12 rounded-xl bg-[#0C6B95] flex items-center justify-center shrink-0 shadow-md shadow-[#0C6B95]/20">
									<svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
										<path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
									</svg>
								</div>
								<div>
									<p class="text-neutral-400 text-xs font-medium uppercase tracking-widest mb-1">Business Hours</p>
									<p class="text-neutral-900 font-semibold text-lg">Mon – Fri: 8:00 – 21:30</p>
									<p class="text-neutral-500 text-sm mt-0.5">Saturday: 9:00 – 16:00</p>
								</div>
							</div>

						</div><!-- end info blocks -->
					</div><!-- end left column -->

					<!-- ── Right: Contact Form ── -->
					<div class="bg-white rounded-3xl p-8 lg:p-10 border border-neutral-200 shadow-xl shadow-neutral-200/60">
						<form class="flex flex-col gap-7">

							<!-- Name -->
							<div class="flex flex-col gap-2">
								<label class="text-neutral-700 text-xs font-medium uppercase tracking-widest">Full Name</label>
								<input
									type="text"
									name="name"
									placeholder="e.g. John Smith"
									class="bg-transparent border-b border-neutral-200 focus:border-[#0C6B95] text-neutral-900 placeholder-neutral-300 py-3 text-base outline-none transition-colors duration-200"
								/>
							</div>

							<!-- Email -->
							<div class="flex flex-col gap-2">
								<label class="text-neutral-700 text-xs font-medium uppercase tracking-widest">Email Address</label>
								<input
									type="email"
									name="email"
									placeholder="e.g. john@example.com"
									class="bg-transparent border-b border-neutral-200 focus:border-[#0C6B95] text-neutral-900 placeholder-neutral-300 py-3 text-base outline-none transition-colors duration-200"
								/>
							</div>

							<!-- Subject -->
							<div class="flex flex-col gap-2">
								<label class="text-neutral-700 text-xs font-medium uppercase tracking-widest">Subject</label>
								<input
									type="text"
									name="subject"
									placeholder="How can we help you?"
									class="bg-transparent border-b border-neutral-200 focus:border-[#0C6B95] text-neutral-900 placeholder-neutral-300 py-3 text-base outline-none transition-colors duration-200"
								/>
							</div>

							<!-- Message -->
							<div class="flex flex-col gap-2">
								<label class="text-neutral-700 text-xs font-medium uppercase tracking-widest">Message</label>
								<textarea
									name="message"
									rows="4"
									placeholder="Tell us about your transfer or experience request..."
									class="bg-transparent border-b border-neutral-200 focus:border-[#0C6B95] text-neutral-900 placeholder-neutral-300 py-3 text-base outline-none transition-colors duration-200 resize-none"
								></textarea>
							</div>

							<!-- Submit -->
							<button
								type="submit"
								class="mt-2 w-full bg-[#0C6B95] hover:bg-[#0a5c82] text-white font-semibold py-4 px-8 rounded-xl transition-colors duration-200 flex items-center justify-center gap-2 shadow-lg shadow-[#0C6B95]/25"
							>
								Send Message
								<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
									<path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
								</svg>
							</button>

						</form>
					</div><!-- end right column -->

				</div><!-- end grid -->
			</div><!-- end content -->
		</section>
	</main>
</Layout>
